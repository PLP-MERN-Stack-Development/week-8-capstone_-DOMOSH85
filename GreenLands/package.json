{
  "name": "greenlands-land-management",
  "version": "1.0.0",
  "description": "A comprehensive land management platform connecting farmers, government organizations, and stakeholders",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
